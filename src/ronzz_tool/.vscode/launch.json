            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "POETRY_VIRTUALENVS_CREATE": "true",
                "POETRY_VIRTUALENVS_IN_PROJECT": "true"
            },
            "python": "/home/ron/.cache/pypoetry/virtualenvs/ronzz-tool-CMyy2PWF-py3.12/bin/python"
